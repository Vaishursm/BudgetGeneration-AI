{
  "name": "budget-electron",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "postinstall": "cd frontend && npm install && cd ../backend && npm install",
    "start": "concurrently \"npm run backend\" \"npm run frontend\"",
    "frontend": "cd frontend && npm run start",
    "backend": "cd backend && npm run start",
    "electron:dev": "cross-env ELECTRON_DEV=true npm-run-all --parallel frontend electron:start",
    "electron:start": "wait-on http://localhost:5173 && electron .",
    "build:frontend": "cd frontend && npm run build && cd .. && node copy-frontend.js",
    "dist": "npm run build:frontend && electron-builder"
  },
  "dependencies": {
    "cross-spawn": "^7.0.3",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "cross-env": "^10.0.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.0.0",
    "npm-run-all": "^4.1.5",
    "wait-on": "^6.0.0"
  },
  "build": {
    "appId": "com.example.budget",
    "files": [
      "main.js",
      "preload.js",
      "frontend-build/**",
      "node_modules/**"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend"
      }
    ],
    "win": {
      "verifyUpdateCodeSignature": false
    }
  }
}
